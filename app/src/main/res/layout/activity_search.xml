<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    android:backgroundTint="@color/white"
    tools:context=".ui.views.SearchActivity">

    <!-- Logo ImageView -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="142dp"
        android:layout_height="63dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/logo" />

    <!-- EditText para buscar livros -->
    <EditText
        android:id="@+id/InputBuscarLivro"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:inputType="text"
        android:textColor="#F37878"
        android:paddingStart="40dp"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:hint="@string/t_tulo_autor_editora"
        android:importantForAccessibility="yes"
        android:contentDescription="Campo de busca para tÃ­tulo, autor ou editora"
        android:background="@drawable/border_input_busca" />

    <!-- RecyclerView para exibir os livros -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleViewBooks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_layout"
        android:layout_gravity="center"
        android:importantForAccessibility="yes"
        android:contentDescription="Lista de livros encontrados"
        />
</LinearLayout>
